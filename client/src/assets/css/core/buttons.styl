.done-button {
    display: inline-block;
    height: 40px;
    padding: 0 15px;
    vertical-align: baseline;
    text-align: center;
    text-decoration: none;
    outline: none;
    user-select: none;
    transition: all .1s ease-in;
    border: none;
    border-radius: 4px;
    background: #88c43d;
    box-shadow: 0 4px 8px 0 rgba(93,134,41,.25),inset 0 1px 2px 0 #b8dc8b;
    font-size: 18px;
    line-height: 40px;
    color: #fff
}