.modal {
    &__wrap {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.7);
        z-index: 1043;
        outline: none !important;
    }

    &__container {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        padding: 0 8px;
        text-align: center;
        box-sizing: border-box;

        &:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
        }
    }

    &__content {
        position: relative;
        display: inline-block;
        width: 94%;
        margin: 0 auto;
        border: 1px dashed #fff;
        vertical-align: middle;
        text-align: left;
        box-shadow: 0 2px 4px rgba(80, 80, 80, .2);
        z-index: 1045;
    }
}

